package patterns;

public class pascaleTriangle {
	public static void main(String args[]) {
		int arr[][] = new int[5][5];
		int row, col;
		for (row = 0; row <= 5; row++) {
			for (col = 0; col <= row-1; col++) {
				arr[row][col] = 0;

				if (col == 1 || col == (row-1)) {
					arr[col][row] = 1;
					System.out.print(arr[col][row]);
				} else {
					arr[row][col] = arr[row - 1][col - 1] + arr[row - 1][col];
					System.out.print(arr[row][col]);
				}
			}
			System.out.println();
		}
		
//		int [][] arr = new int(5)(5);
	}
}
